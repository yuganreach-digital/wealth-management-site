---
export interface Props {
  items: Array<{
    name: string;
    href?: string;
  }>;
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="breadcrumb-nav">
  <ol class="flex items-center space-x-2 text-sm text-slate-600">
    <li>
      <a href="/" class="hover:text-gold-500 transition-colors">Home</a>
    </li>
    {items.map((item, index) => (
      <>
        <li class="flex items-center">
          <svg class="w-4 h-4 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
        </li>
        <li>
          {item.href ? (
            <a href={item.href} class="hover:text-gold-500 transition-colors">
              {item.name}
            </a>
          ) : (
            <span class="text-slate-900 font-medium">{item.name}</span>
          )}
        </li>
      </>
    ))}
  </ol>
</nav>

<style>
  .breadcrumb-nav {
    padding: 1rem 0;
    border-bottom: 1px solid #e2e8f0;
    margin-bottom: 2rem;
  }
  
  .breadcrumb-nav ol {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
</style>
