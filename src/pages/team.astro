---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Section from '../components/Section.astro';
import Card from '../components/Card.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
---

<BaseLayout 
  title="Our Team | Experienced Wealth Management Professionals"
  description="Meet our team of experienced wealth management professionals dedicated to providing sophisticated financial solutions with unwavering discretion and expertise."
>
  <Navigation />
  
  <!-- Breadcrumb -->
  <Breadcrumb items={[{ name: "Team" }]} />
  
  <!-- Hero Section -->
  <section class="pt-32 pb-20 bg-gradient-to-br from-navy-900 via-slate-900 to-navy-900">
    <div class="max-w-7xl mx-auto px-6 text-center">
      <p class="text-gold-400 text-sm uppercase tracking-[0.2em] font-medium mb-6 font-sans opacity-0 animate-fade-up">
        Our Team
      </p>
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-serif text-white mb-8 leading-tight opacity-0 animate-fade-up-delay">
        <span class="block title-words">Experienced Professionals</span>
      </h1>
      <p class="text-xl md:text-2xl text-slate-300 max-w-4xl mx-auto leading-relaxed font-light mb-12 font-sans opacity-0 animate-fade-up-delay-2">
        Our team combines decades of experience with deep expertise in wealth management, estate planning, and sophisticated financial strategies.
      </p>
    </div>
  </section>

  <!-- Leadership Team -->
  <Section 
    title="Leadership Team"
    subtitle="Senior Partners"
    description="Our senior leadership team brings together decades of experience in wealth management and financial services."
  >
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
      <!-- Team Member 1 -->
      <div class="group text-center">
        <div class="relative mb-8">
          <div class="w-64 h-64 mx-auto bg-gradient-to-br from-slate-200 to-slate-300 rounded-lg flex items-center justify-center overflow-hidden">
            <svg class="w-16 h-16 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1">
