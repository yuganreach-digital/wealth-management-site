---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Section from '../components/Section.astro';
import Card from '../components/Card.astro';
---

<BaseLayout 
  title="AVITA | Wealth Management Mastered"
  description="Comprehensive wealth management services, experienced team, and sophisticated financial solutions all in one place."
>
  <Navigation />
  
  <!-- Hero Section -->
  <section id="hero">
  <Hero 
    title="Avita Family Office Services"
    subtitle="Sophisticated Excellence"
    description="We partner with discerning individuals and families to preserve, grow, and transfer wealth with sophisticated precision and unwavering discretion."
  />
  </section>
  
  <!-- Scroll Indicator -->
  <div class="scroll-indicator">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"/>
    </svg>
  </div>

  <!-- Mission Section -->
  <Section 
    id="mission"
    title="Our Mission"
    description="To provide unparalleled wealth management services that honor the trust our clients place in us, ensuring their financial legacy endures for generations to come."
    className="bg-slate-50"
  >
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <Card 
        title="Preservation"
        description="Protecting and maintaining wealth across generations with sophisticated risk management and conservative growth strategies."
        icon="shield"
        href="/services#wealth-management"
        showLearnMore={false}
      />
      <Card 
        title="Growth"
        description="Strategic investment approaches designed to grow wealth while maintaining the highest standards of risk management."
        icon="trending"
        href="/services#investment-advisory"
        showLearnMore={false}
      />
      <Card 
        title="Transfer"
        description="Elegant estate planning and wealth transfer solutions that ensure your legacy benefits future generations."
        icon="building"
        href="/services#estate-planning"
        showLearnMore={false}
      />
    </div>
  </Section>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"/>
    </svg>
  </div>

  <!-- Values Section -->
  <Section 
    id="values"
    title="Our Values"
    subtitle="Guiding Principles"
    description="The principles that guide every decision we make on behalf of our clients."
    className="bg-slate-50"
  >
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <Card 
        title="Trust"
        description="Building lasting relationships through transparency, integrity, and unwavering commitment to our clients' best interests."
        icon="handshake"
        href="/philosophy"
        showLearnMore={false}
      />
      <Card 
        title="Precision"
        description="Meticulous attention to detail in every aspect of wealth management, from strategy development to execution."
        icon="target"
        href="/philosophy"
        showLearnMore={false}
      />
      <Card 
        title="Discretion"
        description="Maintaining the highest levels of confidentiality and privacy in all client relationships and transactions."
        icon="scale"
        href="/philosophy"
        showLearnMore={false}
      />
      <Card 
        title="Excellence"
        description="Pursuing the highest standards of service quality and client satisfaction in everything we do."
        icon="coin"
        href="/philosophy"
        showLearnMore={false}
      />
    </div>
  </Section>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"/>
    </svg>
  </div>

  <!-- Services Section -->
  <section id="services" class="pt-32 pb-20 bg-gradient-to-br from-navy-900 via-slate-900 to-navy-900">
