---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Section from '../components/Section.astro';
import Card from '../components/Card.astro';
---

<BaseLayout 
  title="Espresso Design House | Think Better | Live Better"
  description="Transform your spaces with thoughtful interior design. Residential and commercial design services that enhance your lifestyle."
>
  <Navigation />
  
  <!-- Hero Section -->
  <section id="hero">
  <Hero isHomepage={true} />
  </section>
  
  <!-- Scroll Indicator -->
  <div class="scroll-indicator">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"/>
    </svg>
  </div>

  <!-- Design Philosophy Section -->
  <Section 
    id="mission"
    title="Our Design Philosophy"
    description="We believe great design enhances how you live. Every space we create is thoughtfully designed to reflect your unique vision while improving functionality and beauty."
    className="bg-slate-50"
  >
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <Card 
        title="Functionality"
        description="Creating spaces that work beautifully for your lifestyle. Every design decision prioritizes how you actually live and use your space."
        icon="home"
        href="/services#residential-design"
        showLearnMore={false}
      />
      <Card 
        title="Beauty"
        description="Aesthetic excellence in every detail. We combine timeless design principles with contemporary sensibilities to create spaces that inspire."
        icon="star"
        href="/services#commercial-design"
        showLearnMore={false}
      />
      <Card 
        title="Sustainability"
        description="Timeless designs that endure. We focus on quality materials and thoughtful choices that stand the test of time, both aesthetically and environmentally."
        icon="shield"
        href="/philosophy"
        showLearnMore={false}
      />
    </div>
  </Section>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"/>
    </svg>
  </div>

  <!-- Values Section -->
  <Section 
    id="values"
    title="Our Values"
    className="bg-slate-50"
  >
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <Card 
        title="Collaboration"
        description="Working closely with clients to understand their vision, lifestyle, and needs. Your input shapes every design decision."
        icon="handshake"
        href="/philosophy"
        showLearnMore={false}
      />
      <Card 
        title="Craftsmanship"
        description="Attention to detail in every element. From material selection to final styling, we ensure exceptional quality throughout."
        icon="target"
        href="/philosophy"
        showLearnMore={false}
      />
      <Card 
        title="Innovation"
        description="Fresh, creative solutions that push boundaries while respecting timeless design principles. We bring new ideas to every project."
        icon="star"
        href="/philosophy"
        showLearnMore={false}
      />
      <Card 
        title="Quality"
        description="Premium materials and execution standards. We partner with trusted artisans and vendors to deliver exceptional results."
        icon="star"
        href="/philosophy"
        showLearnMore={false}
      />
    </div>
  </Section>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"/>
    </svg>
  </div>

  <!-- Services Section -->
  <section id="services" class="pt-32 pb-20 bg-gradient-to-br from-espresso-900 via-espresso-950 to-espresso-900">
    <div class="max-w-7xl mx-auto px-6 text-center">
      <p class="text-gold-400 text-sm uppercase tracking-[0.2em] font-medium mb-6 font-sans opacity-0 animate-fade-up">
        Our Services
